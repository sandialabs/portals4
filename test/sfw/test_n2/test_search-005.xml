<?xml version="1.0"?>
<test>
    <desc>Test search with ME and good/bad match</desc>
    <ptl>
      <ptl_ni ni_opt="MATCH PHYSICAL">
        <ompi_rt>
          <ptl_ni ni_opt="MATCH LOGICAL">
            <ptl_eq>
              <ptl_pt>
                <ptl_get_id>
                  
                  <if rank="0">
                    <ptl_md md_data="0xaa">
                      
                      <!-- Wait for rank 1 to set up the receiving buffer -->
                      <barrier/>
                      
                      <ptl_put ack_req="ACK" length="4" match="0x5555" target_id="1" uid="8765432"/>
                      
                      <!-- Wait for the packet containing the ack -->
                      <ptl_eq_wait>
                        <check event_type="SEND"/>
                      </ptl_eq_wait>
                      
                      <!-- Wait for the ack -->
                      <ptl_eq_wait>
                        <check event_type="ACK"/>
                      </ptl_eq_wait>
                      
                    </ptl_md>
                  </if>
                  
                  <if rank="1">
                    <ptl_me list="OVERFLOW" me_data="0x77" me_match="0x5555" me_opt="OP_PUT EVENT_LINK_DISABLE">
                      
                      <!-- Force rank 0 to wait for the buffer to be ready -->
                      <barrier/>
                      
                      <ptl_eq_wait>
                        <check event_type="PUT"/>
                      </ptl_eq_wait>
                      
                      <!-- Search with a bad match -->
                      <ptl_me_search me_match="0x5554" me_opt="OP_PUT" search_op="ONLY">
                        
                        <!-- Wait for PTL_NI_NO_MATCH event -->
                        <ptl_eq_wait>
                          <check event_ni_fail="NO_MATCH" event_type="SEARCH"/>
                        </ptl_eq_wait>
                        
                      </ptl_me_search>
                      
                      <!-- Search a good match -->
                      <ptl_me_search me_match="0x5555" me_opt="OP_PUT" search_op="ONLY">
                        
                        <!-- Wait for PTL_NI_OK event -->
                        <ptl_eq_wait>
                          <check event_ni_fail="OK" event_type="SEARCH"/>
                          <check event_ptl_list="OVERFLOW"/>
                        </ptl_eq_wait>
                        
                      </ptl_me_search>
                      
                      <!-- Delete with a bad match -->
                      <ptl_me_search me_match="0x5554" me_opt="OP_PUT" search_op="DELETE">
                        
                        <!-- Wait for PTL_NI_OK event -->
                        <ptl_eq_wait>
                          <check event_ni_fail="NO_MATCH" event_type="SEARCH"/>
                        </ptl_eq_wait>
                        
                      </ptl_me_search>
                      
                      <!-- Delete with a good match -->
                      <ptl_me_search me_match="0x5555" me_opt="OP_PUT" search_op="DELETE">
                        
                        <!-- Wait for PTL_NI_OK event -->
                        <ptl_eq_wait>
                          <check event_type="PUT_OVERFLOW"/>
                        </ptl_eq_wait>
                        
                      </ptl_me_search>
                      
                      <!-- Try to delete again -->
                      <ptl_me_search me_match="0x5555" me_opt="OP_PUT" search_op="DELETE">
                        
                        <!-- Wait for PTL_NI_OK event -->
                        <ptl_eq_wait>
                          <check event_ni_fail="NO_MATCH" event_type="SEARCH"/>
                        </ptl_eq_wait>
                        
                      </ptl_me_search>
                      
                      <!-- Try to search again with the bad match -->
                      <ptl_me_search me_match="0x5555" me_opt="OP_PUT" search_op="ONLY">
                        
                        <!-- Wait for PTL_NI_OK event -->
                        <ptl_eq_wait>
                          <check event_ni_fail="NO_MATCH" event_type="SEARCH"/>
                        </ptl_eq_wait>
                        
                      </ptl_me_search>
                      
                      <!-- Try to search again with the good match -->
                      <ptl_me_search me_match="0x5555" me_opt="OP_PUT" search_op="ONLY">
                        
                        <!-- Wait for PTL_NI_OK event -->
                        <ptl_eq_wait>
                          <check event_ni_fail="NO_MATCH" event_type="SEARCH"/>
                        </ptl_eq_wait>
                        
                      </ptl_me_search>
                      
                    </ptl_me>
                  </if>
                  
                </ptl_get_id>
              </ptl_pt>
            </ptl_eq>
          </ptl_ni>
        </ompi_rt>
      </ptl_ni>
    </ptl>
  </test>